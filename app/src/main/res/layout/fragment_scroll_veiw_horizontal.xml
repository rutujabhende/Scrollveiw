<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rutuja.image_circle.ScrollVeiwHorizontal">

    <!-- TODO: Update blank fragment layout -->
   <HorizontalScrollView
       android:id="@+id/scroll_horizontal"
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <LinearLayout
           android:id="@+id/horizontal_container"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="horizontal">
           <LinearLayout
               android:orientation="vertical"
               android:layout_width="400dp"
               android:layout_height="400dp"
               android:layout_gravity="center_vertical"
               >

               <ImageView
                   android:id="@+id/image_bird"
                   android:layout_width="300dp"
                   android:layout_height="300dp"
                   android:src="@drawable/bird"
                   android:layout_margin="2dp"
                   android:scaleType="fitXY"
                   />
               <TextView
                   android:id="@+id/bird"
                   android:text="bird"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="20dp"
                   android:textStyle="bold"/>

           </LinearLayout>

           <LinearLayout
               android:orientation="vertical"
               android:layout_width="400dp"
               android:layout_height="400dp"
               android:layout_gravity="center_vertical">

               <ImageView
                   android:id="@+id/image_cute"
                   android:layout_width="300dp"
                   android:layout_height="300dp"
                   android:src="@drawable/cute"
                   android:layout_margin="2dp"
                   android:scaleType="fitXY"
                   />

               <TextView
                   android:text="cute"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="20dp"
                   android:textStyle="bold"/>

           </LinearLayout>

           <LinearLayout
               android:orientation="vertical"
               android:layout_width="400dp"
               android:layout_height="400dp"
               android:layout_gravity="center_vertical">

               <ImageView
                   android:id="@+id/image_nature"
                   android:layout_width="300dp"
                   android:layout_height="300dp"
                   android:src="@drawable/nature"
                   android:layout_gravity="center_vertical"
                   android:layout_margin="2dp"
                   android:scaleType="fitXY"
                   />

               <TextView
                   android:text="sunflower"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="20dp"
                   android:textStyle="bold"/>

           </LinearLayout>

           <LinearLayout
               android:orientation="vertical"
               android:layout_width="400dp"
               android:layout_height="400dp"
               android:layout_gravity="center_vertical">

               <ImageView
                   android:id="@+id/image_tiger"
                   android:layout_width="300dp"
                   android:layout_height="300dp"
                   android:src="@drawable/tiger"
                   android:layout_gravity="center_vertical"
                   android:layout_margin="2dp"
                   android:scaleType="fitXY"/>

               <TextView
                   android:text="tiger"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="20dp"
                   android:textStyle="bold"/>

           </LinearLayout>

           <LinearLayout
               android:orientation="vertical"
               android:layout_width="400dp"
               android:layout_height="400dp"
               android:layout_gravity="center_vertical">

               <ImageView
                   android:id="@+id/image_tree"
                   android:layout_width="300dp"
                   android:layout_height="300dp"
                   android:src="@drawable/tree"
                   android:layout_gravity="center_vertical"
                   android:layout_margin="2dp"
                   android:scaleType="fitXY"/>

               <TextView
                   android:text="treee"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="20dp"
                   android:textStyle="bold"/>

           </LinearLayout>


       </LinearLayout>
   </HorizontalScrollView>
</FrameLayout>
